<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Ui/etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">consent_form.consent_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Consent</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back" class="Endora\ExpertSenderCdp\Block\Adminhtml\GenericBackButton"/>
            <button name="delete" class="Endora\ExpertSenderCdp\Block\Adminhtml\GenericDeleteButton"/>
            <button name="save" class="Endora\ExpertSenderCdp\Block\Adminhtml\Consent\SaveButton"/>
        </buttons>
        <namespace>consent_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>consent_form.consent_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="consent_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider name="consent_form_data_source" class="Endora\ExpertSenderCdp\Model\Consent\DataProvider">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label></label>
        </settings>
        <field name="name" sortOrder="10" formElement="input">
            <settings>
                <label translate="true">Name</label>
                <dataType>text</dataType>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="ecdp_id" sortOrder="20" formElement="select">
            <settings>
                <label translate="true">Consent</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="Endora\ExpertSenderCdp\Ui\Component\Consent\Form\Column\EcdpId\Options"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>
