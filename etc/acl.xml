<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="ExpertSender_Ecdp::expertsender" title="ExpertSender" translate="title" sortOrder="100">
                    <resource id="ExpertSender_Ecdp::field_mapping" title="Custom Field Mappings" translate="title" sortOrder="10">
                        <resource id="ExpertSender_Ecdp::field_mapping_index" title="View" translate="title" sortOrder="10"/>
                        <resource id="ExpertSender_Ecdp::field_mapping_edit" title="Edit" translate="title" sortOrder="20"/>
                        <resource id="ExpertSender_Ecdp::field_mapping_delete" title="Delete" translate="title" sortOrder="30"/>
                    </resource>
                    <resource id="ExpertSender_Ecdp::order_status_mapping" title="Order Status Mappings" translate="title" sortOrder="20">
                        <resource id="ExpertSender_Ecdp::order_status_mapping_index" title="View" translate="title" sortOrder="10"/>
                        <resource id="ExpertSender_Ecdp::order_status_mapping_edit" title="Edit" translate="title" sortOrder="20"/>
                        <resource id="ExpertSender_Ecdp::order_status_mapping_delete" title="Delete" translate="title" sortOrder="30"/>
                    </resource>
                    <resource id="ExpertSender_Ecdp::customer_consents" title="Customer Consents" translate="title" sortOrder="30">
                        <resource id="ExpertSender_Ecdp::consent" title="Consents" translate="title" sortOrder="10">
                            <resource id="ExpertSender_Ecdp::consent_index" title="View" translate="title" sortOrder="10"/>
                            <resource id="ExpertSender_Ecdp::consent_edit" title="Edit" translate="title" sortOrder="20"/>
                            <resource id="ExpertSender_Ecdp::consent_delete" title="Delete" translate="title" sortOrder="30"/>
                        </resource>
                        <resource id="ExpertSender_Ecdp::consent_form_element" title="Consent Form Elements" translate="title" sortOrder="20">
                            <resource id="ExpertSender_Ecdp::consent_form_element_index" title="View" translate="title" sortOrder="10"/>
                            <resource id="ExpertSender_Ecdp::consent_form_element_edit" title="Edit" translate="title" sortOrder="20"/>
                            <resource id="ExpertSender_Ecdp::consent_form_element_delete" title="Delete" translate="title" sortOrder="30"/>
                        </resource>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="ExpertSender_Ecdp::settings" title="ExpertSender Settings" translate="title" sortOrder="40">
                                <resource id="ExpertSender_Ecdp::general_settings" title="General Settings" translate="title" sortOrder="10"/>
                                <resource id="ExpertSender_Ecdp::form_settings" title="Form Settings" translate="title" sortOrder="20"/>
                            </resource>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
